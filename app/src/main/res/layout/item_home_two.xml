<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp">

        <com.zhenghaikj.shop.widget.MyImageView
            android:id="@+id/iv_goods"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">


            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="2"
                android:text="浪奇 万丽洁厕液洁厕剂除菌除垢750g*2瓶装多效清洁有效去污"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领券立减40"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textColor="#808080"/>
                <TextView
                    android:id="@+id/tv_comment_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领券立减40"
                    android:textSize="9sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/gray_attributes"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_comment_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领券立减40"
                    android:textSize="9sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/gray_attributes"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_comment"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_attributes"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="领券立减40"
                    android:textColor="#808080"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_service_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/gray_attributes"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="领券立减40"
                    android:textColor="#808080"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_service_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/gray_attributes"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="领券立减40"
                    android:textColor="#808080"
                    android:textSize="9sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_attributes"
                    android:paddingLeft="1dp"
                    android:text=""
                    android:textColor="#808080"
                    android:textSize="9sp"
                    android:visibility="invisible"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textColor="#f64945"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_goods_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69.00"
                    android:textColor="#f64945"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="3人付款"
                    android:textColor="#808080"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_look_similar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_shape"
                    android:padding="5dp"
                    android:text="看相似"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:id="@+id/ll_gotoshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="bottom"
                        android:text="官方自营店"
                        android:textSize="11sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进店"
                        android:layout_marginTop="2dp"
                        android:gravity="bottom"
                        android:textSize="11sp"
                        android:textColor="#333"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/heijiantou"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去购买"
                    android:textSize="12sp"
                    android:textColor="#f64945"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/home_round"
                   />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee"/>
</LinearLayout>