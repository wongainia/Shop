<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_shop"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/goods"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/img_shop">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="美的 BCD-629WKPZM(E)双开门家用无霜风冷变频智能对开门电冰箱"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="5dp"/>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领券立减40"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#808080"/>
            <TextView
                android:id="@+id/tv_comment_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领券立减40"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_comment_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领券立减40"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_comment"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_attributes"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="领券立减40"
                android:textColor="#808080"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_service_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/gray_attributes"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="领券立减40"
                android:textColor="#808080"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_service_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/gray_attributes"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="领券立减40"
                android:textColor="#808080"
                android:textSize="9sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/rv_attributes"
            android:layout_below="@+id/tv_name"
            android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_shop_name"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ "
                android:textColor="#f64945"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124"
                android:textColor="#f64945"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_salesnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="13人付款"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_place_of_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="上海"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="bottom"
                android:text="官方自营店"
                android:textSize="11sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进店"
                android:layout_marginTop="2dp"
                android:gravity="bottom"
                android:textSize="11sp"
                android:textColor="#333"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="bottom"
                android:layout_marginTop="2dp"
                android:src="@drawable/heijiantou"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>