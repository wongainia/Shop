<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_shop">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="师傅已完成服务"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="34dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="工单号：123156461325"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:text="已完成"/>

          <TextView
              android:id="@+id/tv_serach"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:text="查看详情"/>
          </LinearLayout>

             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_totle_grade"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="36sp"
                android:layout_gravity="bottom"
                android:textColor="#FF4F19"
              android:text="5"
             />
               <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:textColor="#FF4F19"
                android:text="分"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <com.zhenghaikj.shop.widget.StarBarView
                android:layout_toRightOf="@+id/tv_pingfen"
                android:id="@+id/good_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:space_width="15dp"
                app:star_width="25dp"
                app:star_height="25dp"
                app:star_hollow="@mipmap/img_wu_star"
                app:star_isIndicator="false"
                app:star_max="5"
                app:star_orientation="horizontal"
                app:star_rating="5"
                app:star_solid="@mipmap/img_star"
                />

             <TextView
                 android:id="@+id/tv_good_content"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:layout_marginTop="10dp"
                 android:text="满意"
                 />

        </LinearLayout>



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上门速度"
        android:textColor="@color/black"
        />
        <com.zhenghaikj.shop.widget.StarBarView
            android:id="@+id/shangmen_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:space_width="15dp"
            app:star_width="18dp"
            app:star_height="18dp"
            app:star_hollow="@mipmap/img_wu_star"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="5"
            app:star_solid="@mipmap/img_star"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tv_shangmen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满意"
            android:textColor="#FF4F19"
            />
</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修速度"
                android:textColor="@color/black"
                />
            <com.zhenghaikj.shop.widget.StarBarView
                android:id="@+id/weixiu_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:space_width="15dp"
                app:star_width="18dp"
                app:star_height="18dp"
                app:star_hollow="@mipmap/img_wu_star"
                app:star_isIndicator="false"
                app:star_max="5"
                app:star_orientation="horizontal"
                app:star_rating="5"
                app:star_solid="@mipmap/img_star"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tv_weixiu_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满意"
                android:textColor="#FF4F19"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务态度"
                android:textColor="@color/black"
                />
            <com.zhenghaikj.shop.widget.StarBarView
                android:id="@+id/fuwu_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:space_width="15dp"
                app:star_width="18dp"
                app:star_height="18dp"
                app:star_hollow="@mipmap/img_wu_star"
                app:star_isIndicator="false"
                app:star_max="5"
                app:star_orientation="horizontal"
                app:star_rating="5"
                app:star_solid="@mipmap/img_star"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tv_fuwu_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满意"
                android:textColor="#FF4F19"
                />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/bg_evaluate_et"
        android:hint="评论下本次服务吧"
        android:gravity="left|top"
        android:textSize="12sp"
        android:padding="10dp"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="确认"
    android:textColor="@color/black"
    android:background="@drawable/bg_sumbit"
    android:textSize="16dp"
    />

</LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cha"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
</LinearLayout>