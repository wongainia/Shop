<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhenghaikj.shop.widget.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_shop_home"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@drawable/tab_menu_home_text"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_all_baby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_all_baby"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_shop_baobei"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_all_baby"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@drawable/tab_menu_home_text"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="全部宝贝"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shop_micro_amoy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_shop_micro_amoy"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_shop_weitao"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_shop_micro_amoy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@drawable/tab_menu_home_text"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="店铺微淘"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_classification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_classification"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_shop_fenlei"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_classification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@drawable/tab_menu_home_text"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="宝贝分类"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_contact_customer_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_contact_customer_service"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_shop_kefu"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_contact_customer_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@drawable/tab_menu_home_text"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="联系客服"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>