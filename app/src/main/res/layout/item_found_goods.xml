<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_found_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <com.zhenghaikj.shop.widget.RoundImageView
            android:id="@+id/iv_goods_picture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/goods"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦啦啦啦"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="呀呀呀呀呀呀呀晕呀呀呀"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />
            <LinearLayout
                android:id="@+id/ll_agreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_smile"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/founf_goods_selected"/>

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5432人说好"
                    android:textSize="10sp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>